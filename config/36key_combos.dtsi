#define COMBO(NAME, BINDINGS, KEYPOS, LAYERS, MS) \
  combo_##NAME { \
    bindings = <BINDINGS>; \
    key-positions = <KEYPOS>; \
    layers = <LAYERS>; \
    timeout-ms = <MS>; \
  };

#define COMBO_TERM_FAST 14
#define COMBO_TERM_NORMAL 20
#define COMBO_TERM_SLOW 45

combos {
  compatible = "zmk,combos";

  COMBO(q, &kp Q, 2 3, BASE APTHD APT326 NAV SYMBOLS, COMBO_TERM_NORMAL)
  COMBO(z, &kp Z, 22 23, BASE APTHD APT326 NAV SYMBOLS, COMBO_TERM_NORMAL)
  COMBO(v, &kp V, 1 2, BASE APTHD APT326 NAV SYMBOLS, COMBO_TERM_NORMAL)
  COMBO(lshift, &sk LSHIFT, 11 12, BASE APTHD APT326 NAV SYMBOLS NUMBERS NUMPAD FKEYS, COMBO_TERM_FAST)
  COMBO(rshift, &sk RSHIFT, 17 18, BASE APTHD APT326 NAV SYMBOLS NUMBERS NUMPAD FKEYS, COMBO_TERM_FAST)
  COMBO(numpad, &mo NUMPAD, 31 32, BASE APTHD APT326 GAME NAV SYMBOLS NUMBERS NUMPAD FKEYS, COMBO_TERM_SLOW)
  COMBO(FKEYSction, &mo FKEYS, 33 34, BASE APTHD APT326 GAME NAV SYMBOLS NUMBERS NUMPAD FKEYS, COMBO_TERM_SLOW)
  COMBO(backspace, &kp BSPC, 26 27, BASE APTHD APT326 GAME NAV SYMBOLS NUMBERS NUMPAD FKEYS, COMBO_TERM_SLOW)
